{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "bin/x64/Release/netcoreapp3.1/win10-x64/WpfNetCoreDocFx1.dll"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "template": [
      "default",
      "templates/custom"
    ],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/cover.md",
          "api/**.md"
        ]
      },
      {
        "files": [
          "articles/cover.md",
          "articles/Intro.md",
          "articles/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  },
  "pdf": {
    "content": [
      {
        "files": [
          "api/cover.md",
          "api/**.yml"
        ],
        "exclude": [
          "**/toc.md"
        ]
      },
      {
        "files": [
          "articles/cover.md",
          "articles/Intro.md",
          "articles/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "articles/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "api/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "wkhtmltopdf": {
      "additionalArguments": "--footer-left [section] --footer-center [page] --footer-right [date] --footer-font-name Raleway --outline"
    },
    "dest": "_site_pdf"
  }

}